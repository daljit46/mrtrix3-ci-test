{
    "version" : 2,
    "configurePresets" : [
        {
            "name" : "base",
            "displayName" : "Base configuration",
            "hidden" : true,
            "generator" : "Ninja",
            "binaryDir" : "build",
            "cacheVariables" : {
                "CMAKE_CXX_COMPILER_LAUNCHER" : "ccache"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name" : "release",
            "displayName" : "Release",
            "inherits" : "base",
            "cacheVariables" : {
                "CMAKE_BUILD_TYPE" : "Release"
            }
        },
        {
            "name" : "ci-release-checks",
            "displayName" : "Release with asserts and warnings as errors",
            "inherits" : "base",
            "cacheVariables" : {
                "CMAKE_BUILD_TYPE" : "Release",
                "CMAKE_CXX_COMPILER_LAUNCHER" : "sccache",
                "ENABLE_STL_DEBUGGING" : "ON",
                "WARNING_AS_ERRORS" : "ON"
            }
        }
    ]
}

